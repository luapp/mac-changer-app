{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mac_address_changer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "createDir": true,
        "scope": [
            "$APPDATA",
            "$APPDATA/**"
        ]
    },
    "path": {
        "all": true
    },
    "shell": {
        "all": true,
        "open": true,
        "scope": [
        {
          "name": "bash",
          "cmd": "bash",
          "args": [{ "validator": ".+" }, { "validator": ".+" }]
        }
      ]
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "macos_macchanger",
        "width": 250,
        "height": 350
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.paul-legall.macaddresschanger",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
